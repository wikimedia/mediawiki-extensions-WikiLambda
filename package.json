{
	"name": "WikiLambda",
	"private": true,
	"scripts": {
		"test": "grunt test && npm run test:unit",
		"test:unit": "jest",
		"selenium-test": "wdio tests/selenium/wdio.conf.js",
		"selenium-stress-test": "wdio run tests/selenium/stress-test/basic.js",
		"selenium-stress-test:all": "node tests/selenium/stress-test/stressTest.js",
		"selenium-daily": "npm run selenium-test",
		"doc": "jsdoc -c jsdoc.json",
		"coverage": "npm run test:unit",
		"lint": "grunt test",
		"lint:fix": "grunt test --fix"
	},
	"devDependencies": {
		"@babel/core": "7.16.10",
		"@babel/preset-env": "7.16.10",
		"@testing-library/jest-dom": "5.16.5",
		"@testing-library/vue": "6.6.1",
		"@vue/compat": "3.2.37",
		"@vue/test-utils": "2.0.0-rc.21",
		"@vue/vue3-jest": "27.0.0-alpha.4",
		"@wdio/cli": "7.16.13",
		"@wdio/junit-reporter": "7.16.13",
		"@wdio/local-runner": "7.16.13",
		"@wdio/mocha-framework": "7.16.13",
		"@wdio/spec-reporter": "7.16.13",
		"@wikimedia/codex": "0.17.0",
		"eslint-config-wikimedia": "0.25.0",
		"eslint-plugin-jest": "25.7.0",
		"grunt": "1.6.1",
		"grunt-banana-checker": "0.11.0",
		"grunt-eslint": "24.0.1",
		"grunt-stylelint": "0.19.0",
		"jest": "27.4.7",
		"jquery": "3.7.1",
		"jsdoc": "3.6.10",
		"jsdoc-wmf-theme": "0.0.8",
		"stylelint-config-wikimedia": "0.16.1",
		"vue": "3.2.37",
		"vue-template-compiler": "2.6.11",
		"vuex": "4.0.2",
		"wdio-mediawiki": "2.1.0"
	},
	"overrides": {
		"@testing-library/vue": {
			"@vue/test-utils": "$@vue/test-utils"
		}
	},
	"eslintIgnore": [
		"vendor/**"
	]
}
