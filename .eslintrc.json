{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/mediawiki",
		"wikimedia/jquery"
	],
	"globals": {
		"Promise": "readonly"
	},
	"rules": {
		"max-len": [
			"warn",
			{
				"code": 120,
				"tabWidth": 4,
				"ignorePattern": "^// eslint-.+",
				"ignoreUrls": true,
				"ignoreComments": false,
				"ignoreRegExpLiterals": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true
			}
		]
	}
}
